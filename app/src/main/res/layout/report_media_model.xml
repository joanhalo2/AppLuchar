<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    android:layout_margin="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relMediaCardView"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:elevation="13dp">

        <TextView
            android:text="User uploaded the next image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:ems="10"
            android:textSize="10sp"
            android:id="@+id/mediaHeaderField" />

        <ImageView
            android:layout_width="match_parent"
            card_view:srcCompat="@drawable/appluchar_icon2"
            android:id="@+id/mediaImageView"
            android:layout_below="@+id/mediaHeaderField"
            android:elevation="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerInside"
            android:layout_height="200dp" />

        <TextView
            android:text="Morbi metus orci, vestibulum sit amet sollicitudin in, varius eu est. Fusce sed elit eu lectus rhoncus euismod. Nunc pellentesque velit nulla, vitae hendrerit massa imperdiet sit amet. Mauris convallis magna eu commodo pellentesque. Donec eget eros vel nunc tincidunt tincidunt vel eget sapien. Donec aliquam sapien quis arcu interdum tristique. Nunc cursus tortor in molestie ullamcorper. In laoreet ullamcorper est, id fermentum justo imperdiet id. "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@id/mediaImageView"
            android:ems="10"
            android:textSize="10sp"
            android:id="@+id/mediaDescField" />

    </RelativeLayout>
</android.support.v7.widget.CardView>